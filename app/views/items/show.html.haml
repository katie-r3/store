.item-show-info
  %p#notice= notice
  %p
    %strong Item:
    = @item.name
  %p
    %strong Price:
    $
    = sprintf "%.2f", @item.price
  %p
    %strong Description:
    = @item.description

  %p.image
    = image_tag @item.avatar(:medium)

.item-show-links
  = link_to 'Back', items_path

  - if current_user && current_user.admin?
    ||
    = link_to 'Edit', edit_item_path(@item)

  #item-button
    - if signed_in?
      = link_to "", class: "button", data: {target: @cart_action, addUrl: add_to_cart_path(@item), anotherUrl: add_to_cart_path(@item)} do
        %span= @cart_action
        Cart

    - if signed_in? && current_user.get_cart_items.include?(@item)
      = link_to "" , id: "remove-button" , class: "remove", data: {targetUrl: remove_from_cart_path(@item)} do
        Remove


  %p Average Rating
  .average-review-rating{ 'data-score': @average_review }
  %span Based on
  = @item.reviews.count
  reviews

  %br
  %br

  = render @item.reviews
  - if signed_in?
    #add-review-button
      = link_to "Add Review", new_item_review_path(@item)
