= form_with(model: item, local: true) do |form|
  - if item.errors.any?
    #error_explanation
      %h2
        = pluralize(item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - item.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name
    = form.text_field :name, id: :item_name
  .field
    = form.label :price
    = form.text_field :price, id: :item_price
  .field
    = form.label :description
    = form.text_area :description, id: :item_description
  .field
    = form.label :avatar
    = form.file_field :avatar, as: :file
  .field
    = form.label :quantity
    = form.text_field :quantity, id: :item_quantity
  .actions
    = form.submit
