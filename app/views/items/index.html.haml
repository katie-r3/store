.search-empty
  - if @items.blank?
    %h4 There are no items that match
    = params[:search]

- if flash[:notice]
  .alert.alert-success= notice

%h1.current-category
  = params[:category]

- if @items.count == 0
  %h2
    There are no items in that category.
-else
  - @items.each do |item|
    %p.items-index
      = image_tag item.avatar(:medium)
      %br
      = link_to item.description, item
      %br
      $
      = sprintf "%.2f", item.price
      %br
  %br/
