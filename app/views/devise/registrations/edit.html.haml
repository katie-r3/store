#edit-user-form
  %h2
    Edit #{resource_name.to_s.humanize}
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification
    .row
      .col-xs-4
        .field
          %br/
          = f.input :email, autofocus: true, :error_html => { :class => "field_with_errors" }
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .field
          = f.input :first_name, :error_html => { :class => "field_with_errors" }
        .field
          = f.input :last_name, :error_html => { :class => "field_with_errors" }
        .field
          = f.label :address_line1
          %i (your street address)
          %br
          = f.input :address_line1, label: false, :error_html => { :class => "field_with_errors" }
        .field
          = f.label :address_line2
          %i (apartment or suite number)
          %br
          = f.input :address_line2, label: false
        .field
          = f.input :city, :error_html => { :class => "field_with_errors" }
        .field
          = f.label :state
          %i (your state's abbreviation)
          %br
          = f.input :state, label: false, :error_html => { :class => "field_with_errors" }
        .field
          = f.input :zipcode, :error_html => { :class => "field_with_errors" }
        .field
          %br/
          = f.label :password
          %i (leave blank if you don't want to change it)
          %br/
          = f.input :password, autocomplete: "off", label: false, :error_html => { :class => "field_with_errors" }
          - if @minimum_password_length
            %em
              = @minimum_password_length
              characters minimum
        .field
          = f.label :password_confirmation
          %br/
          = f.input :password_confirmation, autocomplete: "off", label: false, :error_html => { :class => "field_with_errors" }
        .field
          %br/
          = f.label :current_password
          %i (we need your current password to confirm your changes)
          %br/
          = f.input :current_password, autocomplete: "off", label: false, :error_html => { :class => "field_with_errors" }
        .actions
          = f.submit "Update", class: "submit-buttons"
        .row
          .col-xs-4
            %h3 Cancel my account
            %p
              Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "cancel-account"}
            = link_to "Back", :back
